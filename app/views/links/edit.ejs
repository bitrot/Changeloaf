<% form_for(link, {action: path_to.link(link), method: 'PUT', id: "link_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('links/form.ejs', {locals: {form: form, link: link}}) %>
    <%- form.submit('<i class="icon-ok icon-white"></i> Update link', {class: 'btn btn-primary'}) %>
    <%- link_to('Cancel', path_to.link(link), {class: 'btn'}) %>
<% });%>

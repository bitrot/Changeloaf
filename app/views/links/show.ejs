<div class="page-header">
    <h1>Details of link</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>title</th><td><%= link.title %></td></tr>
        <tr><th>url</th><td><%= link.url %></td></tr>
        <tr><th>user_id</th><td><%= link.user_id %></td></tr>
        <tr><th>private</th><td><%= link.private %></td></tr>
        <tr><th>created_at</th><td><%= link.created_at %></td></tr>
        <tr><th>modified_at</th><td><%= link.modified_at %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_link(link), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.link(link), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.links) %>
</div>
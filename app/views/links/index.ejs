<div class="page-header">
    <h1>Index of link</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New link', path_to.new_link, {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (links.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>URL</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% links.forEach(function (link) { %>
                        <tr>
                            <td><strong><%- link_to('link #' + link.id, path_to.link(link)) %></strong></td>
                            <td>
                                <%- link.title %>
                            </td>
                            <td>
                                <%- link.url %>
                            </td>
                            <td>
                                <%- link_to('<i class="icon-edit"></i> Edit', path_to.edit_link(link), {class: 'btn btn-mini'}) %>
                                <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.link(link), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>        
                            </td>
                        </tr>
                    <% }); %>        
                </tbody>
            </table>
        <% } else { %>
            <p class="alert alert-block alert-info">
                <strong>No links were found.</strong> 
            </p>
        <% } %>
    </div>
</div>